version: '3'

services:
  backend:
    image: {{ docker_registry }}/qcode-backend:latest
    container_name: qcode-backend
    ports:
      - "4000:4000"
    environment:
      - PORT=4000
      - MONGO_URI={{ mongodb_uri }}
      - SECRET={{ jwt_secret }}
      - CORS_ORIGIN=https://qcode.altero.dev
    restart: always
    networks:
      - qcode-network
    # Add resource limits
    deploy:
      resources:
        limits:
          cpus: "0.4"
          memory: 300M
        reservations:
          cpus: "0.1"
          memory: 150M

  frontend:
    image: {{ docker_registry }}/qcode-frontend:latest
    container_name: qcode-frontend
    ports:
      - "3000:3000"
    depends_on:
      - backend
    environment:
      - NODE_ENV=production
      - NEXT_PUBLIC_API_URL=https://api.altero.dev
    restart: always
    networks:
      - qcode-network
    # Add resource limits
    deploy:
      resources:
        limits:
          cpus: "0.4"
          memory: 400M
        reservations:
          cpus: "0.1"
          memory: 200M

networks:
  qcode-network:
    driver: bridge