version: '3'

services:
  backend:
    image: {{ docker_registry }}/qcode-backend:latest
    container_name: qcode-backend
    ports:
      - "4000:4000"
    environment:
      - PORT=4000
      - MONGO_URI={{ mongodb_uri }}
      - SECRET={{ jwt_secret }}
      - CORS_ORIGIN=http://localhost:3000
    restart: always
    networks:
      - qcode-network

  frontend:
    image: {{ docker_registry }}/qcode-frontend:latest
    container_name: qcode-frontend
    ports:
      - "3000:3000"
    depends_on:
      - backend
    environment:
      - NODE_ENV=production
      - NEXT_PUBLIC_API_URL=http://localhost:4000
    restart: always
    networks:
      - qcode-network

networks:
  qcode-network:
    driver: bridge